{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}